<assembly>
	<id>dist</id>

	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>

	<baseDirectory>pellet-${project.version}</baseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
  
	<moduleSets>
		<moduleSet>
			<sources>
				<outputDirectory>src/${artifactId}</outputDirectory>
			</sources>
		</moduleSet>
	</moduleSets>

	<fileSets>
		<fileSet>
			<directory>../</directory>
			<outputDirectory/>
			<includes>
				<include>*.txt</include>
				<include>*.md</include>
			</includes>
		</fileSet>
	        <fileSet>
        	    <directory>../cli/target/pelletcli/bin</directory>
	            <outputDirectory>/bin</outputDirectory>
	            <includes>
        	        <include>/**</include>
	            </includes>
        	</fileSet>
		<fileSet>
			<directory>../doc</directory>
			<outputDirectory/>
			<includes>
				<include>/**</include>
			</includes>
		</fileSet>
	        <fileSet>
        	    <directory>../pellint</directory>
	            <outputDirectory>doc</outputDirectory>
	            <includes>
        	        <include>/*.txt</include>
	            </includes>
        	</fileSet>
	</fileSets>

</assembly>
